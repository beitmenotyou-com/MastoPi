<%= render 'onboarding/progress' %>
<h1>Step 2: Set Up Email</h1>
<p>Enter the SMTP settings for outgoing email notifications.</p>
<%= form_with url: onboarding_path(step: 'email'), method: :post do |f| %>
  <div class="form-group">
    <%= f.label :smtp_server, "SMTP Server" %>
    <%= f.text_field :smtp_server, required: true, class: "form-control", aria: { label: "SMTP Server" } %>
  </div>
  <div class="form-group">
    <%= f.label :smtp_port, "SMTP Port" %>
    <%= f.number_field :smtp_port, required: true, class: "form-control", aria: { label: "SMTP Port" } %>
  </div>
  <div class="form-group">
    <%= f.label :smtp_username, "SMTP Username" %>
    <%= f.text_field :smtp_username, required: true, class: "form-control", aria: { label: "SMTP Username" } %>
  </div>
  <div class="form-group">
    <%= f.label :smtp_password, "SMTP Password" %>
    <%= f.password_field :smtp_password, required: true, class: "form-control", aria: { label: "SMTP Password" } %>
  </div>
  <%= f.submit "Next", class: "button" %>
<% end %>
